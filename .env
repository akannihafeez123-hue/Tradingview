# ====================
# SYSTEM CONFIGURATION
# ====================
PORT=3000
MODE=paper
LOG_LEVEL=info

# ====================
# TELEGRAM
# ====================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ====================
# TRADINGVIEW WEBHOOK
# ====================
TV_WEBHOOK_SECRET=your_tradingview_secret_here

# ====================
# DATABASE
# ====================
POSTGRES_URL=postgresql://user:password@localhost:5432/trading_bot

# ====================
# TRADING PARAMETERS
# ====================
ACCOUNT_EQUITY=100000
DEFAULT_RISK_PCT=2.0
DAILY_DRAWDOWN_LIMIT=0.05

# ====================
# AI SETTINGS
# ====================
ENABLE_AI_STRATEGY_SELECTION=true
MIN_CONFIDENCE_THRESHOLD=0.65

# ====================
# BITGET (CRYPTO)
# ====================
CCXT_BITGET_API_KEY=your_bitget_api_key_here
CCXT_BITGET_SECRET=your_bitget_secret_here
CCXT_BITGET_PASSWORD=your_bitget_password_here
BITGET_DEMO_MODE=true

# ====================
# OANDA (FOREX/METALS)
# ====================
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here
OANDA_ENVIRONMENT=practice

# ====================
# ALPACA (STOCKS)
# ====================
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets/v2
