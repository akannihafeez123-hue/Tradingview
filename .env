# App settings
PORT=3000
MODE=paper                     # paper or live
NODE_ENV=production

# Telegram
TELEGRAM_BOT_TOKEN=REPLACE_ME
TELEGRAM_CHAT_ID=REPLACE_ME    # numeric chat id or @channelname

# TradingView webhook HMAC secret (used to verify incoming alerts)
TV_WEBHOOK_SECRET=REPLACE_ME

# Postgres (managed DB connection string)
POSTGRES_URL=postgres://DB_USER:DB_PASS@DB_HOST:5432/DB_NAME?sslmode=require

# Account and risk defaults
ACCOUNT_EQUITY=100000          # USD equivalent used for sizing
DEFAULT_RISK_PCT=3.0           # default per-trade risk percent
DAILY_DRAWDOWN_LIMIT=0.05      # 5% daily drawdown guard (0.05 = 5%)

# CCXT / Crypto exchange (Bitget example)
CCXT_BITGET_API_KEY=REPLACE_ME
CCXT_BITGET_SECRET=REPLACE_ME
CCXT_BITGET_PASSWORD=REPLACE_ME

# OANDA (FX / commodities)
OANDA_API_KEY=REPLACE_ME
OANDA_ACCOUNT_ID=REPLACE_ME
OANDA_BASE_URL=https://api-fxpractice.oanda.com

# Alpaca (US equities)
ALPACA_API_KEY=REPLACE_ME
ALPACA_SECRET_KEY=REPLACE_ME
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Optional: additional exchanges (Binance, Bybit, OKX) via CCXT
CCXT_BINANCE_API_KEY=
CCXT_BINANCE_SECRET=
CCXT_BYBIT_API_KEY=
CCXT_BYBIT_SECRET=
CCXT_OKX_API_KEY=
CCXT_OKX_SECRET=

# Optional: monitoring and warmer
WARMR_HOST=https://your-deployment-host.example.com
WARMR_SECRET=REPLACE_ME

# Optional: TLS / proxy settings
PROXY_URL=

# Operational flags
LOG_LEVEL=info
